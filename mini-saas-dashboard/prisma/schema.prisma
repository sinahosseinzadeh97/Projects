// prisma/schema.prisma

// Data source: SQLite connection
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Main Project model for the dashboard
model Project {
  id         String         @id @default(cuid())        // Unique project identifier
  name       String                                      // Project name
  status     ProjectStatus                               // Current project status
  deadline   DateTime                                    // Project deadline
  assignedTo String                                      // Assigned team member
  budget     Float                                       // Project budget (e.g. 12000.50)
  createdAt  DateTime       @default(now())              // Creation timestamp
  updatedAt  DateTime       @updatedAt                   // Auto-updated timestamp
}

// Enum representing different project statuses
enum ProjectStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
}
